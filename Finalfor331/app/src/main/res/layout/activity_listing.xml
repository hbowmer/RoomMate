<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.bowmmh11.finalfor331.ListingActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/type"
        android:hint="Type (house, condo, apartment)"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/squarefeet"
        android:hint="Square footage"
        android:layout_below="@+id/type"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/beds"
        android:hint="Number of bedrooms"
        android:layout_below="@+id/squarefeet"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/squarefeet" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bath"
        android:hint="Number of bathrooms"
        android:layout_below="@+id/beds"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/beds" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/price"
        android:hint="Price of unit"
        android:layout_below="@+id/bath"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/bath" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/year"
        android:hint="Year constructed"
        android:layout_below="@+id/price"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/price" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Listing"
        android:id="@+id/add_listing"
        android:layout_below="@+id/year"
        android:layout_alignParentStart="true"
        android:layout_marginTop="91dp"
        android:layout_alignEnd="@+id/year" />
</RelativeLayout>
